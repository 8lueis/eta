spring.application.name=demo

#mqtt server url
mqtt.url=tcp://test.mosquitto.org:1883
#mqtt client-id
mqtt.client-id=your-client-id
#mqtt topic
mqtt.topic=your-mqtt-topic

#Naver API ID
map.api-id=naver-api-id
#Naver API KEY
map.api-key=naver-api-key

#mysql setting
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver
#db source url
spring.datasource.url=jdbc:mysql://127.0.0.1:[port]/[dbname]?useUnicode=true&characterEncoding=utf8&serverTimezone=Asia/Seoul&zeroDateTimeBehavior=convertToNull&rewriteBatchedStatements=true
#db username
#해당 데이터베이스에 권한 부여한 user 이름
spring.datasource.username=[username]
#db password
spring.datasource.password=[pw]

#true 설정시 jpa 쿼리문 확인 가능
spring.jpa.show-sql=true
#DDL(create, alter, drop) 정의 시 DB 고유 기능을 사용할 수 있음
spring.jpa.hibernate.ddl-auto=update
#JPA의 구현체인 Hibernate가 동작하면서 발행한 SQL의 가독성을 높여줌
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.database-platform=org.hibernate.dialect.MySQL8Dialect
spring.jpa.open-in-view=false



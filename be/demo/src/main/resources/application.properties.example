spring.application.name=demo
#mysql setting
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver
#db source url
#127.0.0.1(localhost):nnnn << nnnn에 지정해둔 db server port 입력
#:nnnn/~~~?server... << ~~~에 접근하고자 하는 데이터베이스명 입력
spring.datasource.url=jdbc:mysql://127.0.0.1:3306/[dbname]?serverTimezone=UTC
#db username
#해당 데이터베이스에 권한 부여한 user 이름
spring.datasource.username=[username]
#db password
#로컬 db 비밀번호 입력
spring.datasource.password=[pw]

#true 설정시 jpa 쿼리문 확인 가능
spring.jpa.show-sql=true
#DDL(create, alter, drop) 정의 시 DB 고유 기능을 사용할 수 있음
spring.jpa.hibernate.ddl-auto=update
#JPA의 구현체인 Hibernate가 동작하면서 발행한 SQL의 가독성을 높여줌
spring.jpa.properties.hibernate.format_sql=true

#mqtt server url
mqtt.url=tcp://test.mosquitto.org:1883
#mqtt client-id
mqtt.client-id=ESP32_eta
#mqtt topic
mqtt.topic=bus/info